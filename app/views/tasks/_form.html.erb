<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
  
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning"  id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :status, '未/済' %>
        <%= f.select :status,[["未","未"],["済","済"]] ,class:"form-control" %>    
      </div>
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content,class:"form-control" %>
      </div>
    
      <%= f.submit '登録',class:"btn btn-primary" %>
    <% end %>
  
  </div>
</div>